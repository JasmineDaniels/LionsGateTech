<div class="container">

    <div class="new-post mx-auto">
        <div class="card">
            <div class="card-header "> 
                <h5 class="post-title">Create A New Post</h5>
            </div>
            
            <div class="card-body">
                <div class="post-content">
                    <form>
                        <div class="form-group mb-3">
                            <label for="comment"></label>
                            <textarea class="form-control" rows="5" id="comment" placeholder="Speak Your Mind.."></textarea>
                        </div>
                    </form>
                </div>
            </div>
                    
            <div class="card-footer">
                <button class="btn btn-primary float-end">POST</button>            
            </div>
        </div>

    </div>

    <div class="recent-posts"></div>
    
</div>

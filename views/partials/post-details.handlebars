<div class="card">
    <a href="/post/{{post.id}}">
        <div class="card-header">                 
            <span class="float-start"> User: <span>{{post.user.username}}</span></span>
            <span class="float-end"> Date Added: <span>{{post.createdAt}}</span></span>
        </div>

        <div class="card-body">
            <p class="post-title">Title: <span>{{post.title}}</span> </p>
            <p class="post-description">Description: <span>{{post.post_content}}</p>
        </div>
        <div class="card-footer">

            <div class=""><button class="btn btn-primary float-end">Add Comment</button></div>
            <br>
            <br>
            <div class="card comments">
                <div class="card-body">
                    <div class="card-content">
                        <!-- All User Comments -->
                        {{#each post.comments as |comment|}}
                            {{!-- {{> comment-details}} --}}
                            <div class="card">
                                <a href="/comment/{{id}}">
                                    <div class="card-header">
                                        <span class="float-start"> User: <span>{{comment.author}}</span></span>
                                        <span class="float-end"> Date Added: <span>{{comment.createdAt}}</span></span>
                                    </div>
                                    <div class="card-body">
                                        
                                        <p class="comment-description">Description:{{comment.comment}} </p>
                                    </div>
                                    <div class="card-footer"></div>
                                </a>
                            </div>
                        {{/each}}
                        
                                
                        
                    </div>
                </div>
            </div>

            <br>
                            
            <div class="card leave-comment">
                <div class="card-body">
                    <!-- Leave A Comment -->
                    <div class="card">
                        <div class="card-header">
                            <h5>Leave A Comment</h5>
                        </div>
                        <div class="card-body">
                            <form>
                                <div class="form-group mb-3">
                                    <label for="comment"></label>
                                    <textarea class="form-control" rows="5" id="comment" placeholder="Speak Your Mind.."></textarea>
                                </div>
                            </form>
                                
                        </div>
                        <div class="card-footer">
                            <button class="btn btn-primary float-end">Post</button>
                        </div>
                    </div>
                </div>
            </div>
                            


        </div>
    </a>
</div>